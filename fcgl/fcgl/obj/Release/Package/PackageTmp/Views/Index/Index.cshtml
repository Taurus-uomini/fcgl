
@{
    ViewBag.Title = "主页";
    Layout = "~/Views/include/_Layout.cshtml";
}
@using fcgl.Models
<div class="panel panel-default center">
    <div class="panel-heading">
        <h3 class="panel-title">主页</h3>
    </div>
    <div class="panel-body">
        <div class="list-group">
            <form action="" method="get">
                <div class="well">
                    <select multiple="multiple" id="select_search" class="form-control multiselect multiselect-info">
                        
                    </select>
                    <input type="hidden" name="id" id="id" value="0" />
                    <input type="hidden" name="num" id="num" value="0" />
                    <button class="btn btn-primary" type="submit">搜索</button>
                </div>
            </form>
            @foreach (var item in ViewBag.housePropertyList)
            {
                <a href="/Index/PropertyDetial/@item.id" class="list-group-item">
                    <h4 class="list-group-item-heading">@item.adress</h4>
                    <h5>所属人：@item.owner.username &ensp;<small style="color:darkgray;">@item.prize &yen;</small></h5>
                    <p class="list-group-item-text">@item.detial</p>
                </a>
            }
        </div>
    </div>
</div>
<script>
    $("select").select2({ dropdownCssClass: 'dropdown-inverse' });
</script>

