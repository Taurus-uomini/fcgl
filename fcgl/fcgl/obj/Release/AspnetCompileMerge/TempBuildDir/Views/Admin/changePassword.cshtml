@{
    ViewBag.Title = "修改密码";
    Layout = "~/Views/include/_Layout.cshtml";
}
@using fcgl.Models
@model AdminModels
<div class="panel panel-default center">
    <div class="panel-heading">
        <h3 class="panel-title">修改密码</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <input type="password" name="passwordold" class="form-control login-input" placeholder="原密码" />
            @Html.ValidationMessage("passwordold", new { @class = "text-danger login-Message" })
            <input type="password" name="passwordnew" class="form-control login-input" placeholder="新密码" />
            @Html.ValidationMessage("passwordnew", new { @class = "text-danger login-Message" })
            <input type="password" name="passwordnewconfg" class="form-control login-input" placeholder="确定密码" />
            @Html.ValidationMessage("passwordnewconfg", new { @class = "text-danger login-Message" })
            <button type="submit" class="btn btn-primary login-button">修改</button>
        }
    </div>
</div>

